---
import Logo from "../assets/logo-callasay.png";
import background from "../assets/alex-mccarthy-U9uiPBfKY9I-unsplash.avif";
import Player from "./Player.astro";
import Facebook from "../assets/GgFacebook.svg";
import Instagram from "../assets/FaBrandsInstagram.svg";
import Youtube from "../assets/StreamlineFlexYoutube.svg";
import Tiktok from "../assets/LineMdTiktok.svg";
import X from "../assets/MeteorIconsX.svg";
import Whatsapp from "../assets/UilWhatsapp.svg";
import GooglePlay from "../assets/LogosGooglePlayIcon.svg";
import AppleStore from "../assets/StreamlineColorPlayStoreFlat.svg";
import Arrow from "../assets/MakiArrow.svg";
---

<div id="container-general">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main
		class="container mx-auto text-center flex flex-col h-screen lg:justify-between justify-evenly items-center pt-4 pb-32 px-4 md:pt-10 md:pb-40"
	>
		<!-- Header -->
		<section class="w-full">
			<!-- Desktop Header -->
			<div class="hidden md:grid md:grid-cols-3 w-full">
				<div
					class="flex justify-center items-center text-center gap-4 text-white flex-wrap"
				>
					<a href="/" class="text-sm lg:text-base">Inicio</a>
					<a href="/" class="text-sm lg:text-base">Contacto</a>
				</div>
				<div
					class="flex justify-center items-center text-center gap-4 text-white"
				>
					<a href="/">
						<img
							src={Logo.src}
							class="w-20 md:w-24 lg:w-30"
							alt="Logo"
						/>
					</a>
				</div>
				<div
					class="flex justify-center items-center text-center gap-2 lg:gap-4 text-white flex-wrap"
				>
					<p class="text-xs lg:text-sm">Redes Sociales:</p>
					<div class="flex gap-2">
						<a class="cursor-pointer" href="#">
							<img
								class="w-4 h-4 lg:w-5 lg:h-5"
								src={Facebook.src}
								alt="Facebook"
							/>
						</a>
						<a class="cursor-pointer" href="#">
							<img
								class="w-4 h-4 lg:w-5 lg:h-5"
								src={Instagram.src}
								alt="Instagram"
							/>
						</a>
						<a class="cursor-pointer" href="#">
							<img
								class="w-4 h-4 lg:w-5 lg:h-5"
								src={Youtube.src}
								alt="Youtube"
							/>
						</a>
						<a class="cursor-pointer" href="#">
							<img
								class="w-4 h-4 lg:w-5 lg:h-5"
								src={Tiktok.src}
								alt="Tiktok"
							/>
						</a>
						<a class="cursor-pointer" href="#">
							<img
								class="w-4 h-4 lg:w-5 lg:h-5"
								src={X.src}
								alt="X"
							/>
						</a>
						<a class="cursor-pointer" href="#">
							<img
								class="w-4 h-4 lg:w-5 lg:h-5"
								src={Whatsapp.src}
								alt="Whatsapp"
							/>
						</a>
					</div>
				</div>
			</div>

			<!-- Mobile Header -->
			<div class="md:hidden flex flex-col items-center gap-4">
				<div class="flex justify-center items-center">
					<a href="/">
						<img src={Logo.src} class="w-16" alt="Logo" />
					</a>
				</div>
				<div
					class="flex justify-center items-center gap-3 text-white text-sm"
				>
					<a href="/">Inicio</a>
					<a href="/">Contacto</a>
				</div>
				<div class="flex justify-center items-center gap-3">
					<a class="cursor-pointer" href="#" target="_blank">
						<img
							class="w-5 h-5"
							src={Facebook.src}
							alt="Facebook"
						/>
					</a>
					<a class="cursor-pointer" href="#" target="_blank">
						<img
							class="w-5 h-5"
							src={Instagram.src}
							alt="Instagram"
						/>
					</a>
					<a class="cursor-pointer" href="#" target="_blank">
						<img class="w-5 h-5" src={Youtube.src} alt="Youtube" />
					</a>
					<a class="cursor-pointer" href="#" target="_blank">
						<img class="w-5 h-5" src={Tiktok.src} alt="Tiktok" />
					</a>
					<a class="cursor-pointer" href="#" target="_blank">
						<img class="w-5 h-5" src={X.src} alt="X" />
					</a>
					<a class="cursor-pointer" href="#" target="_blank">
						<img
							class="w-5 h-5"
							src={Whatsapp.src}
							alt="Whatsapp"
						/>
					</a>
				</div>
			</div>
		</section>

		<!-- Main -->
		<section class="px-4">
			<h1
				class="font-extrabold text-3xl sm:text-4xl md:text-6xl lg:text-8xl text-white leading-tight"
			>
				Radio Callasay
			</h1>
			<p
				class="text-white font-bold text-sm sm:text-base md:text-lg mt-2"
			>
				Desde el Corazón de la Tierra, Radio Callasay te Acompaña.
			</p>
		</section>

		<!-- Footer -->
		<section class="w-full px-4">
			<!-- Desktop Footer -->
			<div class="hidden md:grid md:grid-cols-12 w-full">
				<div
					class="flex justify-center items-center text-center gap-4 text-white col-[1/3]"
				>
					<a href="https://walink.co/5798f9" target="_blank" class="text-white text-2xl lg:text-4xl font-bold">
						<div class="flex items-center gap-2">
							<p class="border-b-2 border-white decoration-solid">Chatea</p>
							<img class="w-4 h-4" src={Arrow.src} alt="Arrow" />
						</div>
						<p class="text-xs uppercase flex">Mensaje con cabina</p>
					</a>
				</div>
				<div
					class="flex flex-col justify-center items-center text-center gap-4 text-white col-[3/11]"
				>
					<div>
						<p
							class="text-white text-xl md:text-2xl lg:text-4xl font-bold leading-tight"
						>
							Estamos en vivo para ti, 24/7. ¡No te desconectes!
						</p>
						<p class="uppercase text-white text-xs mt-4">
							donde tú estés. Te acompañamos a todas partes
						</p>
					</div>
					<div
						class="flex gap-2 justify-center items-center flex-wrap"
					>
						<a
							class="inline-flex items-center gap-2 border-2 border-indigo-500 rounded-xl py-1 px-4 bg-[#0000004a] text-sm"
							href="https://play.google.com/store/apps/details?id=radio.callasaystereo"
							target="_blank"
						>
							<img
								class="w-4 h-4"
								src={GooglePlay.src}
								alt="Google Play"
							/>
							<p>Google Play</p>
						</a>
						<a
							class="inline-flex items-center gap-2 border-2 border-indigo-500 rounded-xl py-1 px-4 bg-[#0000004a] text-sm"
							href="https://apps.apple.com/app/radio-callasay/id6446181564"
							target="_blank"
						>
							<img
								class="w-4 h-4"
								src={AppleStore.src}
								alt="Apple Store"
							/>
							<p>Apple Store</p>
						</a>
					</div>
					<div class="mt-4">
						<p class="text-white text-xs md:text-sm">
							© 2014 – 2025 | <span> <a class="cursor-pointer" href="https://servistream.net" target="_blank">servistream.net</a></span>. Todos los derechos
							reservados.
						</p>
					</div>
				</div>
				<div
					class="flex justify-center items-center text-center gap-4 text-white col-[11/-1]"
				>
					<p class="text-white text-2xl lg:text-4xl font-bold">
						Live
					</p>
				</div>
			</div>

			<!-- Mobile Footer -->
			<div class="md:hidden flex flex-col items-center gap-4 text-white">
				<div class="flex gap-6">
					<a href="https://walink.co/5798f9" target="_blank" class="text-white text-2xl lg:text-4xl font-bold">
						<div class="flex items-center gap-2">
							<p class="border-b-2 border-white decoration-solid">Chatea</p>
							<img class="w-4 h-4" src={Arrow.src} alt="Arrow" />
						</div>
						<p class="text-xs uppercase flex">Mensaje con cabina</p>
					</a>
					<p class="text-white text-lg font-bold">Live</p>
				</div>
				<div class="text-center">
					<p
						class="text-white text-lg sm:text-xl font-bold leading-tight"
					>
						Estamos en vivo para ti, 24/7. ¡No te desconectes!
					</p>
					<p class="uppercase text-white text-xs mt-2">
						donde tú estés. Te acompañamos a todas partes
					</p>
				</div>
				<div class="flex gap-2 justify-center items-center flex-wrap">
					<a
						class="inline-flex items-center gap-2 border-2 border-indigo-500 rounded-xl py-1 px-3 bg-[#0000004a] text-xs"
						href="https://play.google.com/store/apps/details?id=radio.callasaystereo"
						target="_blank"
					>
						<img
							class="w-3 h-3"
							src={GooglePlay.src}
							alt="Google Play"
						/>
						<p>Google Play</p>
					</a>
					<a
						class="inline-flex items-center gap-2 border-2 border-indigo-500 rounded-xl py-1 px-3 bg-[#0000004a] text-xs"
						href="https://apps.apple.com/app/radio-callasay/id6446181564"
						target="_blank"
					>
						<img
							class="w-3 h-3"
							src={AppleStore.src}
							alt="Apple Store"
						/>
						<p>Apple Store</p>
					</a>
				</div>
				<div class="mt-2">
					<p class="text-white text-xs text-center">
						© 2014 – 2025 | servistream.net. Todos los derechos
						reservados.
					</p>
				</div>
			</div>
		</section>

		<!-- Player Radio -->
		<section class="fixed bottom-0 left-0 w-full">
			<Player />
		</section>
	</main>
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		object-fit: cover;
		background-position: center;
		background-size: cover;
		background-repeat: no-repeat;
		transform-origin: center;
		animation: smoothZoom 12s ease-in-out infinite;
	}

	@keyframes smoothZoom {
		0%,
		100% {
			transform: scale(1);
		}
		50% {
			transform: scale(1.1);
		}
	}

	#container-general {
		height: 100vh;
		overflow: hidden;
	}

	main {
		height: 100%;
	}
</style>
